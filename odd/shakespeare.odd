        <body>
            <schemaSpec start="TEI teiCorpus" ident="shakespare" source="teipublisher.odd"> 
                <elementSpec ident="pb" mode="change">
                    <model behaviour="webcomponent" cssClass="columnbreak">
                        <param name="name" value="'pb-facs-link'"/>
                        <param name="content" value="@n"/>
                        <param name="facs" value="replace(@facs, '^FFimg:(.*)$', '$1')"/>
                        <outputRendition>
                            font-size: 16px;
                            color: #888888;
                            cursor: pointer;
                            display: inline;
                            display: block;
                            margin-right: -32px;
                            float: right;
                        </outputRendition>
                    </model>
                </elementSpec>
                <elementSpec ident="lb" mode="change">
                    <model behaviour="omit" predicate="not(parent::p)">
                        <desc>Omit line breaks unless inside a paragraph</desc>
                    </model>
                    <model behaviour="break" useSourceRendition="true">
                        <param name="type" value="'line'"/>
                        <param name="label" value="@n"/>
                    </model>
                </elementSpec>
                <elementSpec mode="change" ident="speaker">
                    <model behaviour="inline">
                        <outputRendition>font-style:italic; margin-right: 1rem; display: inline-block; text-indent: 2rem;</outputRendition>
                    </model>
                </elementSpec>
                <elementSpec ident="l" mode="change">
                    <model predicate="preceding-sibling::*[1][self::speaker]" behaviour="inline">
                        <desc>Display inline if preceded by a speaker</desc>
                    </model>
                    <model behaviour="block" useSourceRendition="true">
                        <outputRendition> margin-left: 1em; </outputRendition>
                    </model>
                </elementSpec>
                <elementSpec mode="change" ident="p">
                    <model predicate="ancestor::sp" behaviour="inline" useSourceRendition="true">
                        <desc>Inside a speech element, the paragraph is shown next to the speaker</desc>
                    </model>
                    <model behaviour="paragraph" useSourceRendition="true">
                        <outputRendition>text-align: justify;</outputRendition>
                    </model>
                </elementSpec>
                <elementSpec mode="change" ident="stage">
                    <model predicate="contains(@rend, 'rightJustified')" behaviour="block">
                        <outputRendition>font-style: italic; text-align: right;</outputRendition>
                    </model>
                    <model predicate="contains(@rend, 'center')" behaviour="block">
                        <outputRendition>font-style: italic; text-align: center;</outputRendition>
                    </model>
                    <model behaviour="block">
                        <outputRendition>font-style: italic;</outputRendition>
                    </model>
                </elementSpec>
                <elementSpec ident="head" mode="change">
                    <model predicate="@type='supplied'" behaviour="omit"/>
                    <model predicate="parent::figure" behaviour="block">
                        <outputRendition>font-style: italic;</outputRendition>
                    </model>
                    <model predicate="parent::table" behaviour="block">
                        <outputRendition>font-style: italic;</outputRendition>
                    </model>
                    <model predicate="parent::lg" behaviour="block">
                        <outputRendition>font-style: italic;</outputRendition>
                    </model>
                    <model predicate="parent::list" behaviour="block">
                        <outputRendition>font-weight: bold;</outputRendition>
                    </model>
                    <model predicate="parent::div" behaviour="heading">
                        <param name="level" value="count(ancestor::div)"/>
                    </model>
                    <model behaviour="block"/>
                </elementSpec>
                <elementSpec ident="c" mode="change">
                    <model predicate="@rend='decoratedCapital'" behaviour="inline">
                        <outputRendition>
                            font-size: 3em; line-height: 0.9;
                        </outputRendition>
                    </model>
                    <model behaviour="inline"/>
                </elementSpec>
                <elementSpec ident="fw" mode="change">
                    <model output="web" predicate="@type='rh'" behaviour="block">
                        <outputRendition>
                            color: #CCC;
                        </outputRendition>
                    </model>
                    <model output="web" predicate="@type='catchword'" behaviour="block" cssClass="catchword">
                        <outputRendition>
                            float: right;
                            margin-top: 1em;
                            color: #CCC;
                        </outputRendition>
                    </model>
                    <model output="web" predicate="@type='sig'" behaviour="block" cssClass="sig">
                        <outputRendition>
                            text-align: center;
                            margin-top: 1em;
                            color: #CCC;
                        </outputRendition>
                    </model>
                    <model behaviour="omit"/>
                </elementSpec>
            </schemaSpec>
        </body>
    </text>
