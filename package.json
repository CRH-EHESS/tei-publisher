{
  "name": "tei-publisher-app",
  "version": "5.1.0-RC",
  "description": "TEI Publisher facilitates the integration of the TEI Processing Model into exist-db applications",
  "main": "gulpfile.js",
  "directories": {
    "test": "webtest",
    "wctest": "components/test"
  },
  "scripts": {
    "start": "npm install && npm run build:production",
    "build": "rollup -c rollup.config.js",
    "build:production": "rollup -c rollup.config.js --environment BUILD:production",
    "watch": "rollup -c rollup.config.js --watch",
    "clean": "rimraf resources/scripts resources/css/leaflet resources/images/leaflet resources/images/openseadragon resources/lib/ resources/css/prismjs resources/i18n/common",
    "test": "webtest/node_modules/.bin/wdio wdio.conf.js",
    "wctest": "./node_modules/.bin/wdio components/test/wdio.conf.js"
  },
  "repository": {
    "type": "git",
    "url": "git@gitlab.existsolutions.com:tei-publisher/tei-publisher-app.git"
  },
  "license": "GPL-3.0",
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^7.1.1",
    "@rollup/plugin-replace": "^2.3.1",
    "rimraf": "^3.0.0",
    "rollup": "^1.21.0",
    "rollup-plugin-analyzer": "^3.1.2",
    "rollup-plugin-copy": "^3.1.0",
    "rollup-plugin-terser": "^5.1.1"
  },
  "dependencies": {
    "@teipublisher/pb-components": "git+https://gitlab.existsolutions.com/tei-publisher/pb-components.git#master"
  }
}